#!/bin/bash

# if [[ $TRAVIS_BRANCH == 'deploy' ]] ; then

	# Set pwd to sub-dir 
	cd alpha

	# Install dependencies
	cd alpha || gem install bundler --conservative
	cd alpha || bundle check || bundle install

	# Set variable
	export JEKYLL_ENV=production

	# Download analytics
	cd alpha || wget https://www.google-analytics.com/analytics.js

	# Add credentials
	echo "ftp_username: ${ftp_username}" >> _glynn.yml
	echo "ftp_password: ${ftp_password}" >> _glynn.yml
	cd alpha || bundle exec glynn
 
# else
# echo 'This branch will not be deployed, though. The site is deployed from "deploy" branch, only.'
# exit 1
# fi